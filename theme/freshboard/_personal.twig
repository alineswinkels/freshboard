    <div class="item-open item-open-personal-{{ intern.id }} js-info-block" data-target="personal-item-{{ intern.id }}">
        <!-- <a class="js-close close" data-target=".item-open-personal-{{ intern.id }}"><i class="icon icon-cancel"></i></a> -->



        {% include '_personal-projects.twig' %}

        <div class="col-md-8 col-md-offset-2 item-content">


                <h3 class="title title-item">{{ intern.firstname }} {{ intern.lastname }}</h3>
                <p class="subtitle subtitle-item">{{ intern.function }}</p>
        </div>

        <div class="col-md-8 col-md-offset-2 item-content">

                <p class="description col-md-6 col-md-offset-3">{{ intern.description }}</p>
        </div>
        <!-- skills en goals -->
        <div class="col-md-8 col-md-offset-2 item-content">
                <div class="row">
                    <dl class="list maki skills col-md-3 col-md-offset-3">
                        <dt class="toggle js-list-title">skills</dt>
                            {% if intern.relation.skills %}
                                {% for skill in intern.related('skills') %}
                                    <dd><span class="list-item">{{ skill.name }}</span></dd>
                                {% endfor %}
                            {% endif %}
                    </dl>
                    <dl class="list maki goals col-md-3">
                        <dt class="toggle js-list-title">goals</dt>
                            {% if intern.relation.goals %}
                                {% for goal in intern.related('goals') %}
                                    <dd><span class="list-item">{{ goal.name }}</span></dd>
                                {% endfor %}
                            {% endif %}
                    </dl>

                </div>
        </div>

    </div>
